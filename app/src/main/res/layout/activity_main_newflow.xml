<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:weightSum="8.7">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.7"
            android:visibility="gone"
            android:background="@color/gold"
            android:orientation="horizontal"
            android:weightSum="4.5"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/demo_layout_old"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="bottom|right|center"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/go_tour_img_white" />
                <TextView
                    android:id="@+id/demo_text"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="match_parent"
                    android:gravity="bottom|right|center"
                    android:text="@string/tour"
                    android:textColor="@color/white" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="50dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameTextooredo_old"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:visibility="gone"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:text="@string/customer_name"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/wallet_id_old"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.3"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:text="@string/customer_number"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#fff" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_login_newflow"
                        android:layout_width="wrap_content"
                        android:text="@string/login_btn_login"
                        android:textSize="16sp"
                        android:layout_marginRight="0dp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="gone"
                        android:background="#ffffff"/>


                    <Button
                        android:id="@+id/bookeey_mainmenu_loadwallet_btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@null"
                        android:drawablePadding="7dp"
                        android:drawableTop="@drawable/load_wallet_grey"
                        android:gravity="center"
                        android:paddingLeft="0dp"
                        android:text="@string/mainmenu_load_wallet"
                        android:textAllCaps="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/blue"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- <ImageView
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="0.ppp"
                 android:id="@+id/image_person"
                 android:src="@drawable/ooredoo_header_logo" />-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:visibility="invisible"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:id="@+id/image_person_old"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/default_image" />

                    <ImageView
                        android:id="@+id/overlay_old"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/profile_frame_inner" />


                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="@string/customer_current_balctv"
                    android:visibility="gone"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/balance_id"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="@string/customer_current_balc_amt"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#fff"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_signup_newflow"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:text="@string/register_newflow"
                        android:visibility="gone"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="gone"
                        android:background="#ffffff"/>


                    <Button
                        android:id="@+id/bookeey_mainmenu_loadwallet_btn3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@null"
                        android:drawablePadding="7dp"
                        android:drawableTop="@drawable/load_wallet_grey"
                        android:gravity="center"
                        android:paddingLeft="0dp"
                        android:text="@string/mainmenu_load_wallet"
                        android:textAllCaps="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/blue"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/language_layout_old"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="bottom|right|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/language_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom|right|center"
                    android:text="@string/app_language"
                    android:visibility="gone"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/coutry_flag_img_old"
                    android:layout_width="72dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/kuwait" />

            </LinearLayout>

        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.7"
            android:visibility="gone"
            android:background="@color/gold"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameTextooredo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:text="@string/customer_name"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#fff"
                    android:visibility="gone"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/wallet_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.3"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:visibility="gone"
                    android:text="@string/customer_number"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#fff" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:id="@+id/image_person"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/default_image" />

                    <ImageView
                        android:id="@+id/overlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/profile_frame_inner" />


                </FrameLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_newflow_login"
                    android:layout_width="0dp"
                    android:text="Login"
                    android:background="@drawable/mainmenu_newflow_btn_bg"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_height="40dp" />

                <Button
                    android:id="@+id/btn_newflow_register"
                    android:layout_width="0dp"
                    android:text="Register"
                    android:background="@drawable/mainmenu_newflow_btn_bg"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_height="40dp" />
            </LinearLayout>
        </LinearLayout>
        <!--<include
            layout="@layout/profile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"></include>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gold"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="0dp"
            android:weightSum="5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/merchant_category_screen_wallet_logo_back"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/bookeey_white_with_down_title"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/bookeey_mainmenu_loadwallet_btn1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:drawableTop="@drawable/load_wallet_grey"
                android:gravity="center"
                android:text=""
                android:visibility="gone"
                android:textAllCaps="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/blue"
                android:textSize="12sp"
                android:textStyle="bold" />


            <FrameLayout
                android:id="@+id/login_frame_layout"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1.5">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="76dp"
                    android:src="@drawable/guest_circle_background"
                    android:layout_height="76dp">

                </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="@string/login_title"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_height="wrap_content"

               >

            </TextView>

            </FrameLayout>

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/bookeey_mainmenu_pay_btn1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@null"
                android:drawableTop="@drawable/qr_code_grey"
                android:gravity="center"
                android:text=""
                android:visibility="gone"
                android:textAllCaps="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/blue"
                android:textSize="12sp"
                android:textStyle="bold" />

            <FrameLayout
                android:id="@+id/signup_frame_layout"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1.5">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="76dp"
                    android:src="@drawable/guest_circle_background"
                    android:layout_height="76dp"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:text="@string/register_newflow"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"

                    >

                </TextView>

            </FrameLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout

                        android:id="@+id/language_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/coutry_flag_img"
                            android:layout_width="74dp"
                            android:layout_height="37dp"
                            android:src="@drawable/kuwait" />



                    </LinearLayout>





                    <LinearLayout
                        android:id="@+id/demo_layout"
                        android:layout_weight="1"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/demo_text1"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            android:text="@string/tour"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_marginLeft="4dp"
                            android:layout_height="20dp"
                            android:src="@drawable/go_tour_img_white" />




                    </LinearLayout>
                </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/load_background"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bookeey_mainmenu_loadwallet_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@null"
                android:drawablePadding="7dp"
                android:drawableTop="@drawable/load_wallet_grey"
                android:gravity="center"
                android:paddingLeft="45dp"
                android:text="@string/mainmenu_load_wallet"
                android:textAllCaps="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/blue"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bookeey_mainmenu_pay_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@null"
                android:drawablePadding="7dp"
                android:drawableTop="@drawable/qr_code_grey"
                android:gravity="center"
                android:paddingRight="55dp"
                android:text="@string/mainmenu_pay"
                android:textAllCaps="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/blue"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="7dp"
            android:layout_weight="7"
            android:fillViewport="true">

            <com.bookeey.wallet.live.mainmenu.ExpandableHeightGridView
                android:id="@+id/grid_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:isScrollContainer="false"
                android:numColumns="3"
                android:stretchMode="columnWidth" />

        </ScrollView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/sliding_list_frame"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="#80000000"
        android:choiceMode="singleChoice"
        android:divider="#80000000"
        android:dividerHeight="0dp"></FrameLayout>
</androidx.drawerlayout.widget.DrawerLayout>