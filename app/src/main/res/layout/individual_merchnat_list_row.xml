<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:weightSum="10"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8.5"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/individual_merchant_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.8"
            android:text="XXXXXXXXX"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/individual_merchant_title_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="yyyyyyy"
            android:textStyle="normal" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="2"

            android:layout_height="wrap_content"
   android:layout_gravity="center_vertical"
            android:weightSum="2.2">
        <ImageView
            android:id="@+id/merchant_contact_img"
            android:layout_width="26dp"
            android:layout_height="26dp"

            android:layout_weight="1"

            android:src="@drawable/call_image" />

            <ImageView
          android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"

                android:layout_weight="0.2"
/>

            <ImageView
                android:id="@+id/merchant_branch_direction"
                android:layout_width="26dp"

                android:layout_height="26dp"

                android:layout_weight="1"

                android:src="@drawable/location_red" />

        </LinearLayout>

    </LinearLayout>


