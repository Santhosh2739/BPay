<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7" />

        <ImageView
            android:id="@+id/splash_screen_logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center|center_vertical"
            android:layout_weight="0.7"
            android:gravity="center"
            android:src="@drawable/ooredoo_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/splash_screen_english_language_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="0.1"
                android:gravity="center|right"
                android:paddingRight="5dp"
                android:text="@string/ooredoo_splash_screen_english_language_text"
                android:textColor="@color/light_blue"
                android:textSize="18sp" />


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.005"/>
            <View
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:background="@color/light_blue" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.005"/>

            <TextView
                android:id="@+id/splash_screen_arabic_language_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="0.1"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="@string/register_arabic"
                android:textColor="@color/light_blue"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1.3"
            android:orientation="vertical" />

        <ImageView
            android:id="@+id/splash_screen_taketour_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_gravity="center|center_vertical"
            android:layout_weight="0.6"
            android:gravity="center"
            android:src="@drawable/take_a_tour" />

        <TextView
            android:id="@+id/splash_screen_taketour_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/ooredoo_splash_screen_taketour_text"
            android:textAllCaps="true"
            android:textColor="@color/light_blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/splash_screen_copyright_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="@string/ooredoo_splash_screen_copyright_text"
            android:textColor="@color/light_gray"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>
