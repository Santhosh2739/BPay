<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/offers_background"
    android:layout_height="240dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/offer_background_image"
            android:layout_width="match_parent"
            android:layout_marginLeft="4dp"
            android:background="#ffffff"
            android:layout_marginRight="4dp"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc" />






    <LinearLayout

        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:weightSum="5.5"
        android:background="@drawable/gradient_background_blue"
        android:layout_gravity="bottom"
        android:orientation="horizontal"

        >

        <ImageView
            android:layout_margin="4dp"
            android:background="@drawable/ic_empty"
            android:id="@+id/merchant_logo"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp">
        </ImageView>

<TextView
    android:id="@+id/offer_text"
    android:layout_weight="3.4"
    android:layout_width="0dp"
    android:text="Offer text"
    android:gravity="center_vertical"
    android:layout_height="match_parent">

</TextView>


        <LinearLayout
            android:layout_marginRight="4dp"
            android:layout_weight="2.1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/offer_discount"
                android:layout_width="wrap_content"
                android:text="disc"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="26sp"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/offer_expiry"
                android:layout_width="wrap_content"
                android:text="Exp"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>


    </LinearLayout>














    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:visibility="gone"
        android:background="@drawable/gradient_background_blue"
        android:layout_margin="4dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.9"
            android:weightSum="5"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/offers_merchant_name"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:paddingLeft="0dp"
                android:textStyle="bold"
                android:paddingRight="7dp"
                android:textSize="23sp"
                android:textColor="#ffffff"
                android:text="xxxxx" />

            <TextView
                android:id="@+id/offer_discount_old"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_weight="1.5"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="23sp"
                android:text="xxxx" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1.1"
            android:weightSum="5"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/offer_text_old"
                android:layout_width="0dp"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:paddingLeft="0dp"
                android:layout_weight="3.5"
                android:paddingRight="0dp"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:text="xxx" />

            <TextView
                android:id="@+id/offer_expiry_old"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:layout_gravity="center"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:text="xxx" />
        </LinearLayout>



    </LinearLayout>
</FrameLayout>
