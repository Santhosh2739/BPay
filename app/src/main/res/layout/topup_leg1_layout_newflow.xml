<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="10">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:background="@color/gold"
        android:padding="7dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/topup_l1_nameTextooredo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:layout_weight="0.3"
                android:paddingLeft="10dp"
                android:text="@string/customer_name"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/topup_l1_wallet_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:layout_marginTop="10dp"
                android:layout_weight="0.3"
                android:paddingLeft="10dp"
                android:text="@string/customer_number"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:id="@+id/topup_l1_image_person"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/default_image" />

                <ImageView
                    android:id="@+id/overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile_frame_inner" />


            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="@string/customer_current_balctv"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/topup_l1_balance_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/customer_current_balc_amt"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="@string/intl_L1_confirm_payment"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_weight="0.8"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/topup_leg1_left0_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="0.2"
            android:gravity="start|center"
            android:paddingLeft="10dp"
            android:text="@string/intl_L1_receipient_mobile"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:id="@+id/topup_leg1_vertical0_view"
            android:layout_width="0.1dp"
            android:layout_height="25dp"
            android:background="#000" />

        <TextView
            android:id="@+id/topup_leg1_value_right0_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:gravity="start|center"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="@color/blue"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:id="@+id/topup_leg1__horizantal0_view"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:background="@color/black"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.8"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/topup_leg1_left1_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="0.2"
            android:gravity="start|center"
            android:paddingLeft="10dp"
            android:text="@string/intl_L1_local_currency"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:id="@+id/topup_leg1_vertical1_view"
            android:layout_width="0.1dp"
            android:layout_height="25dp"
            android:background="#000" />

        <TextView
            android:id="@+id/topup_leg1_value_right1_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:gravity="start|center"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="@color/blue"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:id="@+id/topup_leg1__horizantal1_view"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:background="@color/black"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.8"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/topup_leg1_left2_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="0.2"
            android:gravity="start|center"
            android:paddingLeft="10dp"
            android:text="@string/intl_L1_chargerd_amount"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:id="@+id/topup_leg1_vertical2_view"
            android:layout_width="0.1dp"
            android:layout_height="25dp"
            android:background="#000" />

        <TextView
            android:id="@+id/topup_leg1_value_right2_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:gravity="start|center"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="@color/blue"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:id="@+id/topup_leg1__horizantal2_view"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:background="@color/black"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.8"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/topup_leg1_left3_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="0.2"
            android:gravity="start|center"
            android:paddingLeft="10dp"
            android:text="@string/intl_L1_customer_ID"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:id="@+id/topup_leg1_vertical3_view"
            android:layout_width="0.1dp"
            android:layout_height="25dp"
            android:background="#000" />

        <TextView
            android:id="@+id/topup_leg1_value_right3_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:gravity="start|center"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="@color/blue"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:id="@+id/topup_leg1__horizantal3_view"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:background="@color/black"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.8"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/topup_leg1_left4_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="0.2"
            android:gravity="start|center"
            android:paddingLeft="10dp"
            android:text="@string/intl_L1_tranasaction_ID"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:id="@+id/topup_leg1_vertical4_view"
            android:layout_width="0.1dp"
            android:layout_height="25dp"
            android:background="#000" />

        <TextView
            android:id="@+id/topup_leg1_value_right4_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:gravity="start|center"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="@color/blue"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:id="@+id/topup_leg1__horizantal4_view"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:background="@color/black"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.8"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/topup_leg1_left5_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="0.2"
            android:gravity="start|center"
            android:paddingLeft="10dp"
            android:text="@string/intl_L1_txn_time"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:id="@+id/topup_leg1_vertical5_view"
            android:layout_width="0.1dp"
            android:layout_height="25dp"
            android:background="#000" />

        <TextView
            android:id="@+id/topup_leg1_value_right5_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:gravity="start|center"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="@color/blue"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:id="@+id/topup_leg1__horizantal5_view"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:background="@color/black"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"></LinearLayout>

    <Button
        android:id="@+id/topup_leg1_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_weight="1"
        android:background="@drawable/registration_btn_submit_bg"
        android:text="@string/intl_L1_confirm_btn"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical"></LinearLayout>
</LinearLayout>