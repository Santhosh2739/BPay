<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/alert_bg_color"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt1h"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:padding="15dp"
            android:text="@string/forgot_password_title"
            android:textAllCaps="true"
            android:textColor="@color/gold"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="@color/gold" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="@string/forgot_password_desc1"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="@string/forgot_password_desc2"
            android:textColor="#000"
            android:textSize="16sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/reset_password_close_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@drawable/alert_button_selector"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/forgot_close_btn"
                android:textAllCaps="true"
                android:textColor="@drawable/alert_button_text_selector"
                android:textSize="16sp" />

            <View
                android:layout_width="0.04dp"
                android:layout_height="match_parent"
                android:background="@color/light_gray" />

            <Button
                android:id="@+id/reset_password_confirm_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@drawable/alert_button_selector"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/forgot_confirm_btn"
                android:textAllCaps="true"
                android:textColor="@drawable/alert_button_text_selector"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>