<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:weightSum="3"
    android:orientation="horizontal">


    <FrameLayout
        android:id="@+id/notification_count_frame_layout"
        android:layout_width="0dp"
        android:layout_gravity="left"
        android:layout_weight="0.5"
        android:layout_height="match_parent"
        android:foregroundGravity="right">

        <ImageView
            android:id="@+id/push_notification_message_bell"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/bell_icon2"
            />

        <TextView
            android:id="@+id/count_text_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="x"
            android:background="@drawable/notification_count_text_background"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            />

    </FrameLayout>

    <TextView
        android:id="@+id/merchant_category_screen_title_text"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center_horizontal|center_vertical"
        android:text="LOGIN"
        android:longClickable="false"
        android:maxLines="1"
        android:textAllCaps="true"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold" />


    <FrameLayout

        android:id="@+id/_old"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_weight="0.5"
        android:layout_height="match_parent"
        android:foregroundGravity="right">




        <ImageView
            android:id="@+id/push_notification_message_bell_old"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/bell_icon2"
      />

        <TextView
            android:id="@+id/count_text_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            />

    </FrameLayout>


</LinearLayout>