    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/invoice_success_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="0.4"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="@string/invoice_L2_status"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:id="@+id/invoice_success_status_text_view"
                android:layout_width="0.1dp"
                android:layout_height="25dp"
                android:background="#000" />

            <TextView
                android:id="@+id/invoice_success_status_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="start|center"
                android:paddingLeft="10dp"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:id="@+id/invoice_success_status_text_horizantal0_view"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ooredoo_sendmoney_confirmpayment_mobileno_left0_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="0.4"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="@string/invoice_L2_customer_name"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:id="@+id/ooredoo_sendmoney_confirmpayment_mobileno_vertical0_view"
                android:layout_width="0.1dp"
                android:layout_height="25dp"
                android:background="#000" />

            <TextView
                android:id="@+id/invoice_success_name_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="start|center"
                android:paddingLeft="10dp"
                android:textColor="@color/blue"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:id="@+id/ooredoo_sendmoney_confirmpayment_mobileno_horizantal0_view"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ooredoo_sendmoney_confirmpayment_status_left0_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="0.4"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="@string/invoice_L2_invoice_number"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:id="@+id/ooredoo_sendmoney_confirmpayment_status_vertcal0_view"
                android:layout_width="0.1dp"
                android:layout_height="25dp"
                android:background="@color/black"></View>

            <TextView
                android:id="@+id/invoice_success_invno_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="start|center"
                android:paddingLeft="10dp"
                android:textColor="@color/blue"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:id="@+id/ooredoo_sendmoney_confirmpayment_status_value_horizantal0_view"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ooredoo_sendmoney_confirmpayment_transferamount_left0_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="0.4"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="@string/invoice_L2_amount_paid"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:id="@+id/ooredoo_sendmoney_confirmpayment_transferamount_vertical0_view"
                android:layout_width="0.1dp"
                android:layout_height="25dp"
                android:background="@color/black"></View>

            <TextView
                android:id="@+id/invoice_success_amount_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="start|center"
                android:paddingLeft="10dp"
                android:textColor="@color/blue"
                android:textSize="16sp" />
        </LinearLayout>


        <View
            android:id="@+id/ooredoo_sendmoney_confirmpayment_status_value_horizantal0_view1"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ooredoo_sendmoney_confirmpayment_bpoints_earned0_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="0.4"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="@string/bpoitns_earned"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:id="@+id/ooredoo_sendmoney_confirmpayment_bpoints_earned0_view"
                android:layout_width="0.1dp"
                android:layout_height="25dp"
                android:background="@color/black"></View>

            <TextView
                android:id="@+id/invoice_success_bpoints_earned"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="start|center"
                android:paddingLeft="10dp"
                android:textColor="@color/blue"
                android:textSize="16sp" />
        </LinearLayout>


        <View
            android:id="@+id/ooredoo_sendmoney_confirmpayment_status_value_horizantal0_view2"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ooredoo_invoice_bpoints_balance_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="0.4"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="@string/bpoints_balance"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:id="@+id/ooredoo_sbpoints_balance_view"
                android:layout_width="0.1dp"
                android:layout_height="25dp"
                android:background="@color/black"></View>

            <TextView
                android:id="@+id/invoice_success_bpoints_balance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="start|center"
                android:paddingLeft="10dp"
                android:textColor="@color/blue"
                android:textSize="16sp" />
        </LinearLayout>


        <View
            android:id="@+id/ooredoo_sendmoney_confirmpayment_status_value_horizantal0aa_view"
            android:layout_width="match_parent"
