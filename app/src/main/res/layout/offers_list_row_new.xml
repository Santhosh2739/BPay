<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/offers_background"
    android:layout_height="240dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/offer_background_image"
        android:layout_width="match_parent"
        android:layout_marginLeft="4dp"
        android:background="#ffffff"
        android:layout_marginRight="4dp"
        android:layout_height="match_parent" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc" />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:weightSum="6"
        android:padding="6dp">

        <LinearLayout

            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="5"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/offers_merchant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:paddingRight="7dp"
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:text="" />

            <TextView
                android:id="@+id/offer_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="7dp"
                android:textSize="13sp"
                android:text="" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1.7"
            android:visibility="gone"
            android:layout_marginLeft="2dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/offer_expiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:text="" />

            <TextView
                android:id="@+id/offers_merchant_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:paddingLeft="5dp"
                android:paddingRight="7dp"
                android:text="" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
          android:gravity="center"
           android:layout_marginRight="4dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/offer_discount"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
