<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="10">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:padding="7dp"
        android:background="@color/gold"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sendmoney_nameTextooredo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:layout_weight="0.4"
                android:paddingLeft="10dp"
                android:text="@string/customer_name"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sendmoney_wallet_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:layout_marginTop="10dp"
                android:layout_weight="0.4"
                android:paddingLeft="10dp"
                android:text="@string/customer_number"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:visibility="invisible"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:id="@+id/sendmoney_image_id_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/default_image" />

                <ImageView
                    android:id="@+id/overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile_frame_inner" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="0.4"
                android:text="@string/customer_current_balctv"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/sendmoney_balance_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="0.4"
                android:text="@string/customer_current_balc_amt"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/mobile_radiogroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="top|center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/mobile_totup_radio_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_weight="0.4"
                    android:button="@drawable/custom_radio_button_selector"
                    android:checked="true"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:text="@string/mobile_bill_L1_recharge"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/mobile_billpay_radio_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.4"
                    android:button="@drawable/custom_radio_button_selector"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:text="@string/mobile_bill_L1_paybill"
                    android:textSize="15sp" />
            </RadioGroup>

            <ImageView
                android:id="@+id/mobile_operator_img"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="8dp"
                android:layout_weight="0.28"
                android:src="@drawable/bookeey_latest_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:visibility="gone">

            <RadioGroup
                android:id="@+id/mobile_voucher_radiogroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/mobile_vocher_radio_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.4"
                    android:button="@drawable/custom_radio_button_selector"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:text="Vocher"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/mobile_postpaid_radio_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:button="@drawable/custom_radio_button_selector"
                    android:gravity="start|center"
                    android:paddingLeft="10dp"
                    android:text="Postpaid"
                    android:textSize="15sp" />
            </RadioGroup>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/mobile_operatorname_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:gravity="left"
                android:text="Operator Name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/mobile_operatorname_edit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:background="@drawable/rounded_edittext"
                android:clickable="false"
                android:editable="false"
                android:ems="15"
                android:focusable="false"
                android:gravity="center"
                android:hint="Enter operator name"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mobile_mobilenumber_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="0.4"
                android:gravity="left|center"
                android:hint="@string/mobile_bill_L1_mobilenumber"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/mobile_mobilenumber_edit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:background="@drawable/rounded_edittext"
                android:ems="15"
                android:gravity="center"
                android:hint="@string/mobile_bill_L1_enter_mobile_number"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:padding="8dp"
                android:maxLength="8"
                android:textColor="@color/blue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mobile_topup_amount_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/mobile_topup_amount_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="0.4"
                android:gravity="left|center"
                android:text="@string/mobile_bill_L1_amount"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/mobile_topup_amount_spinner"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:background="@drawable/rounded_edittext" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/mobile_billpay_amount_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/mobile_billpay_amount_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="0.4"
                android:gravity="left|center"
                android:text="@string/mobile_bill_L1_amount"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/mobile_billapy_amount_edit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:background="@drawable/rounded_edittext"
                android:ems="15"
                android:gravity="center"
                android:hint="@string/mobile_bill_L1_enter_amount"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:textColor="@color/blue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mobile_tpin_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/mobile_tpin_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="0.4"
                android:gravity="left|center"
                android:text="@string/mobile_bill_L1_password"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/mobile_tpin_edit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:background="@drawable/rounded_edittext"
                android:ems="15"
                android:gravity="center"
                android:hint="@string/mobile_bill_L1_enter_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="10"
                android:drawableEnd="@drawable/fingerprint_icon"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:visibility="visible" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@color/white" />


    </LinearLayout>

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_weight="1"
        android:background="@drawable/registration_btn_submit_bg"
        android:gravity="center"
        android:text="@string/mobile_bill_L1_proceed_btn"
        android:textAllCaps="true"
        android:textColor="#fff" />
</LinearLayout>
