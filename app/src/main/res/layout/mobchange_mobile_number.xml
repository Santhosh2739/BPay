<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="9.5">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

    </LinearLayout>

    <EditText
        android:id="@+id/mobchange_old_mobile_number_et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_weight="0.9"
        android:background="@drawable/rounded_edittext"
        android:gravity="center"
        android:hint="@string/mobchange_old_mobile_number_et"
        android:inputType="number"
        android:maxLength="8" />

    <EditText
        android:id="@+id/mobchange_new_mobile_number_et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.9"
        android:background="@drawable/rounded_edittext"
        android:gravity="center"
        android:hint="@string/mobchange_new_mobile_number_et"
        android:inputType="number"
        android:maxLength="8" />

    <EditText
        android:id="@+id/mobchange_old_pin_et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.9"
        android:background="@drawable/rounded_edittext"
        android:gravity="center"
        android:hint="@string/mobchange_password"
        android:maxLength="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/mobchange_civil_id_et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.9"
        android:background="@drawable/rounded_edittext"
        android:gravity="center"
        android:hint="@string/mobchange_civil_id_et"
        android:inputType="number"
        android:maxLength="12" />



    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="right|bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/forgotpassword_help_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:visibility="visible"
            android:gravity="top|center"
            android:paddingStart="20dp"
            android:text="@string/login_help"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/forgotpassword_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center"
            android:layout_marginRight="25dp"
            android:layout_weight="0.5"
            android:gravity="right"
            android:paddingLeft="5dp"
            android:paddingRight="20dp"
            android:text="@string/login_forgot_password"
            android:textAllCaps="true"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></LinearLayout>

    <Button
        android:id="@+id/mobchange_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_weight="0.9"
        android:background="@drawable/registration_btn_submit_bg"
        android:text="@string/mobchange_submit_btn"
        android:textAllCaps="true"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"></LinearLayout>

    <ImageView
        android:id="@+id/splash_screen_taketour_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center|center_vertical"
        android:layout_weight="2"
        android:gravity="center"
        android:src="@drawable/take_a_tour"
        android:visibility="gone" />

    <TextView
        android:id="@+id/splash_screen_taketour_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:gravity="center"
        android:text="take an advanced tour"
        android:textAllCaps="true"
        android:textColor="@color/light_blue"
        android:textSize="15sp"
        android:visibility="gone" />

    <View
        android:id="@+id/registration_hori_view_footer"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_gray"
        android:visibility="gone" />


</LinearLayout>