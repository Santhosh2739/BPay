<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_weight="1.2"
        android:orientation="horizontal"
        android:background="@drawable/offerbackground"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            ></LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:background="@drawable/offers_background"
            android:layout_gravity="center"
            android:id="@+id/show_merchant_saved_new_offer_linear"
            android:gravity="center"
            android:layout_weight="0.55">
            <Button
                android:id="@+id/show_merchant_saved_offer_new_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.425"
                android:text="@string/new_offers"
                android:background="@null"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/blue"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.125"
                android:layout_margin="10dp"
                android:id="@+id/show_merchant_saved_offer_new_count_txt"
                android:gravity="center"
                android:textSize="14sp"
                android:background="@drawable/offer_count_background"
                android:textStyle="bold"
                android:textColor="@color/blue"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_weight="0.05"

            ></LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_weight="0.55"
            android:background="@color/very_lightgray"
            android:id="@+id/show_merchant_saved_my_active_offer_linear"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:id="@+id/show_merchant_saved_offer_new_my_active"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.425"
                android:text="@string/active_offers"
                android:background="@color/very_lightgray"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/blue"
                android:layout_weight="0.125"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textSize="14sp"
                android:visibility="gone"
                android:textStyle="bold"
                android:id="@+id/show_merchant_saved_offer_my_active_count_txt"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            ></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.5"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/show_offer_image"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="0.7" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="0dp"
            android:layout_weight="0.1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/show_offer_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/blue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/show_merchant_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/blue"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/light_blue"
        android:layout_marginTop="15dp"
        android:id="@+id/show_offers_image"/>

    <LinearLayout
        android:id="@+id/merchantname_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:orientation="horizontal"></LinearLayout>


        <TextView
            android:id="@+id/tv_offer_name_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:layout_weight="0.38"
            android:paddingLeft="0dp"
            android:text="Offer Name"
            android:textAppearance="?android:attr/textAppearanceSmall"

            android:textColor="@color/black" />


        <View
            android:id="@+id/vertical1"
            android:layout_width="0.1dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:orientation="horizontal"></LinearLayout>

        <TextView
            android:id="@+id/tv_offer_name_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:background="@null"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/blue" />
    </LinearLayout>

    <View
        android:id="@+id/horizontal1"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/black" />
    <LinearLayout
        android:id="@+id/valid_from_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:orientation="horizontal"></LinearLayout>


        <TextView
            android:id="@+id/tv_valid_from_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:layout_weight="0.38"
            android:paddingLeft="0dp"
            android:text="Valid from"
            android:textAppearance="?android:attr/textAppearanceSmall"

            android:textColor="@color/black" />


        <View
            android:id="@+id/vertical2"
            android:layout_width="0.1dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:orientation="horizontal"></LinearLayout>

        <TextView
            android:id="@+id/tv_valid_from_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:background="@null"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/blue" />
    </LinearLayout>

    <View
        android:id="@+id/horizontal2"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/valid_till_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:orientation="horizontal"></LinearLayout>


        <TextView
            android:id="@+id/tv_valid_till_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:layout_weight="0.38"
            android:paddingLeft="0dp"
            android:text="Valid till"
            android:textAppearance="?android:attr/textAppearanceSmall"

            android:textColor="@color/black" />


        <View
            android:id="@+id/vertical3"
            android:layout_width="0.1dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:orientation="horizontal"></LinearLayout>

        <TextView
            android:id="@+id/tv_valid_till_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:background="@null"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/blue" />
    </LinearLayout>

    <View
        android:id="@+id/horizontal3"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/black" />



    <LinearLayout
        android:id="@+id/end_time_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:orientation="horizontal"></LinearLayout>


        <TextView
            android:id="@+id/tv_offer_text_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:layout_weight="0.38"
            android:paddingLeft="0dp"
            android:text="Offer Details"
            android:textAppearance="?android:attr/textAppearanceSmall"

            android:textColor="@color/black" />


        <View
            android:id="@+id/vertical5"
            android:layout_width="0.1dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:orientation="horizontal"></LinearLayout>

        <TextView
            android:id="@+id/tv_offer_text_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:background="@null"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/blue" />
    </LinearLayout>

    <View
        android:id="@+id/horizontal6"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.25"></LinearLayout>
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="0.25"
            android:text="@string/show_offers_save"
            android:textSize="18sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:id="@+id/show_offers_save"
            android:visibility="invisible"
            android:background="@drawable/registration_btn_submit_bg"
            android:textColor="@color/white"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.25"></LinearLayout>
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="0.25"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:text="@string/close"
            android:textAllCaps="true"
            android:id="@+id/show_offers_close"
            android:background="@drawable/registration_btn_submit_bg"
            android:textColor="@color/white"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.25"></LinearLayout>

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="0.25"
            android:textSize="18sp"
            android:gravity="center"
            android:visibility="invisible"
            android:layout_marginRight="20dp"
            android:text="@string/show_offers_ignore"
            android:textAllCaps="true"
            android:id="@+id/show_offers_reject"
            android:background="@drawable/registration_btn_submit_bg"
            android:textColor="@color/white"
            />
    </LinearLayout>
</LinearLayout>