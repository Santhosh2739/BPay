<?xml version="1.0" encoding="utf-8"?><!--suppress ALL -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="11">


    <EditText
        android:id="@+id/etSearch"
        android:hint="  Search"
        android:drawableLeft="@drawable/search"
        android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:visibility="gone"
        android:layout_marginBottom="4dp"
        android:layout_weight="0.5"

        />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1.2"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <HorizontalScrollView
            android:id="@+id/mscroll_view"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            >
        </HorizontalScrollView>

        <!--        <androidx.recyclerview.widget.RecyclerView-->
        <!--            android:id="@+id/recyclerView"-->
        <!--            android:layout_centerInParent="true"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent" />-->

    </RelativeLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_weight="9.3"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="@color/white"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="10dp"
        >

        <!-- You can use a RecyclerView or another "List" instead -->
        <ListView
            android:id="@+id/listView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:scrollbarStyle="outsideOverlay" />


        <ScrollView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginLeft="6dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginTop="22dp"
                    android:id="@+id/tv_a_d"
                    android:background="@drawable/oval_background"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="A-D"></TextView>
                <TextView
                    android:layout_marginTop="22dp"
                    android:id="@+id/tv_e_h"
                    android:background="@drawable/oval_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:text="E-H"></TextView>
                <TextView
                    android:layout_marginTop="22dp"
                    android:id="@+id/tv_i_l"
                    android:textSize="11sp"
                    android:background="@drawable/oval_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="I-L"></TextView>
                <TextView
                    android:layout_marginTop="22dp"
                    android:gravity="center"
                    android:id="@+id/tv_m_p"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:background="@drawable/oval_background"
                    android:text="M-P"></TextView>
                <TextView
                    android:layout_marginTop="22dp"
                    android:id="@+id/tv_q_t"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:background="@drawable/oval_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Q-T"></TextView>
                <TextView
                    android:layout_marginTop="22dp"
                    android:id="@+id/tv_u_x"
                    android:background="@drawable/oval_background"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="U-X"></TextView>
                <TextView
                    android:layout_marginTop="22dp"
                    android:id="@+id/tv_y_z"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:background="@drawable/oval_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Y-Z"></TextView>

                <TextView
                    android:layout_marginTop="22dp"
                    android:id="@+id/tv_0_9"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:background="@drawable/oval_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="0-9"></TextView>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</LinearLayout>