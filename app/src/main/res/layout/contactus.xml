<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="12"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_us_screen_office_adress_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/contact_us_screen_office_adress"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contact_us_screen_office_adress_detail_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="9"
                    android:gravity="center"
                    android:paddingLeft="13dp"
                    android:text="@string/contact_us_screen_office_adress_detail"
                    android:textColor="@color/light_black"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/contact_us_location_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/location_green_new" />
            </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/contact_us_screen_write_us_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/contact_us_screen_write_us"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/contact_us_screen_mail_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/contact_us_screen_mail"
            android:textColor="@color/light_black"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/contact_us_screen_customer_care_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/contact_us_screen_customer_care"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />





        <LinearLayout
            android:layout_width="140dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/contact_us_call"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.5"
                android:src="@drawable/call_image" />


            <TextView
                android:id="@+id/contact_us_screen_mobile_number_text"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/contact_us_screen_mobile_number"
                android:textColor="@color/light_black"
                android:textSize="14sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"></View>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="8dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/contact_us_social_media_accounts_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/social_media_accounts"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/contact_us_social_facebook_ll"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
            android:id="@+id/contact_us_social_facebook_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="top"
            android:layout_weight="0.3"

            android:src="@drawable/facebook" />
            <TextView
                android:id="@+id/contact_us_social_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:gravity="center"
                android:paddingLeft="13dp"
                android:text="BookeeyWallet"
                android:textColor="@color/light_black"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/contact_us_social_instagram_ll"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.6"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/contact_us_social_instagram_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="0.3"

                android:src="@drawable/instagram" />
            <TextView
                android:id="@+id/contact_us_social_instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:gravity="center"
                android:paddingLeft="13dp"
                android:autoLink="web"
                android:text="BookeeyWallet"
                android:textColor="@color/light_black"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/contact_us_social_snapchat_ll"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.6"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/contact_us_social_snapchat_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="0.3"

                android:src="@drawable/snapchat" />
            <TextView
                android:id="@+id/contact_us_social_snapchat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:gravity="center"
                android:paddingLeft="13dp"
                android:text="BookeeyWallet"
                android:textColor="@color/light_black"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/contact_us_social_youtube_ll"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.6"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/contact_us_social_youtube_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="0.3"

                android:src="@drawable/youtube" />
            <TextView
                android:id="@+id/contact_us_social_youtubet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:gravity="center"
                android:paddingLeft="13dp"
                android:text="BookeeyWallet"
                android:textColor="@color/light_black"
                android:textSize="16sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:layout_height="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="260dp"
                android:weightSum="5"
                android:layout_marginTop="14dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/contact_us_facebook_icon"
                    android:layout_width="30dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:src="@drawable/facebook" />
                <ImageView
                    android:id="@+id/contact_us_instagram_icon"
                    android:layout_width="30dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:src="@drawable/instagram" />
                <ImageView
                    android:id="@+id/contact_us_snapchat_icon"
                    android:layout_width="30dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:src="@drawable/snapchat" />

                <ImageView
                    android:id="@+id/contact_us_youtube_icon"
                    android:layout_width="30dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:src="@drawable/youtube" />

                <ImageView
                    android:id="@+id/contact_us_linkedin_icon"
                    android:layout_width="30dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:src="@drawable/contactus_linkedin" />


            </LinearLayout>

            <TextView
                android:id="@+id/contact_us_social_bookeeywallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="BookeeyPay"
                android:layout_marginBottom="28dp"
                android:textColor="@color/light_black"
                android:textSize="16sp" />

        </LinearLayout>

        <Button
            android:id="@+id/contact_us_screen_connect_executive_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="0.8"
            android:background="@drawable/registration_btn_submit_bg"
            android:gravity="center"
            android:padding="6dp"
            android:text="@string/contact_us_screen_connect_executive"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1">

        </LinearLayout>
    </LinearLayout>

</LinearLayout>